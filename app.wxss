@import "style/weui.wxss";

page {
    background-color: #f8f8f8;
    font-size: 16px;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
    padding-bottom: 5px;
}

.page__hd {
    padding: 5px;
}

.page__bd {
    padding-bottom: 5px;
}

.page__bd_spacing {
    padding-left: 5px;
    padding-right: 5px;
}

.page__title {
    text-align: center;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    color: rgb(59, 59, 59);
    text-align: left;
    font-size: 14px;
}

.container {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    margin: 5px;
}
