@import "style/weui.wxss";

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 5px;
}

.page__bd {
  padding-bottom: 5px;
}

.page__bd_spacing {
  padding-left: 5px;
  padding-right: 5px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
  color: #888;
  font-size: 11px;
}

.page__title {
  text-align: center;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  color: #888;
  text-align: left;
  font-size: 14px;
}

